lorem-ipsum()
{
    local x='eval'

    [ "$1" == '-d' ] && {
        x='echo'
        shift
    }

    local n
    case "$1" in
        --@(dict|input|output))
            n="${1:2}"
            ;;
        *) error "lorem-ipsum:" \
            "internal: invalid arg '$1'"
            return 1
            ;;
    esac

    local s='
        /^#\s+lorem-ipsum-'"$n"'\s*$/!b
        n
        /^\x22\\$/!q
        :1
        n
        /^\x22$/q
        p
        b1'

    $x "\
sed -nr '$s' ${program%.sh}.def"
}

test-lorem-ipsum2()
{
    # stev: do not quote any occurrence of
    # $dict_temp_file and $text_temp_file

    local c=''
    [ -n "$text_temp_file" ] && c+=${c:+$'\n'}"\
lorem-ipsum --input > $text_temp_file &&"
    [ -n "$dict_temp_file" ] && c+=${c:+$'\n'}"\
lorem-ipsum --dict > $dict_temp_file &&"
    [ -z "$text_temp_file" ] && c+=${c:+$'\n'}"\
lorem-ipsum --input|"
    c+="
word-count"
    [ -z "$dict_temp_file" ] && c+=" \
<(lorem-ipsum --dict)"
    [ -n "$dict_temp_file" ] && c+=" \
$dict_temp_file"
    [ -n "$text_temp_file" ] && c+=" \
$text_temp_file"
    c+="|
sed '\$d'|cut -d $'\\t' -f2|sort -f"

    run-test \
'lorem-ipsum2' \
"lorem-ipsum --dict" \
"$c"
}

test-lorem-ipsum3()
{
    # stev: do not quote any occurrence of
    # $dict_temp_file and $text_temp_file

    local c=''
    [ -n "$text_temp_file" ] && c+=${c:+$'\n'}"\
lorem-ipsum --input > $text_temp_file &&"
    [ -n "$dict_temp_file" ] && c+=${c:+$'\n'}"\
lorem-ipsum --dict > $dict_temp_file &&"
    [ -z "$text_temp_file" ] && c+=${c:+$'\n'}"\
lorem-ipsum --input|"
    c+="
word-count"
    [ -z "$dict_temp_file" ] && c+=" \
<(lorem-ipsum --dict)"
    [ -n "$dict_temp_file" ] && c+=" \
$dict_temp_file"
    [ -n "$text_temp_file" ] && c+=" \
$text_temp_file"
    c+="|
sed '\$d'|sort -k 1n,1 -k 2,2"

    run-test \
'lorem-ipsum3' \
"lorem-ipsum --input|
    tr -s '[:space:]' '\\n'|sort|uniq -c|
    sed -r 's/^\\s+//;s/\\s+/\\t/'|
    sort -k 1n,1 -k 2,2" \
"$c"
}

